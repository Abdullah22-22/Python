import json
company_info={}
while True:
    name=input("enter ur name,if want stop press y: ")
    if name.lower() == 'y':  # if user enters 'y', stop the loop
        break
    age=int(input("enter ur age: "))
    postioin=input("enter ur postioin: ")
    salary=input("enter ur salary: ")
    company_info[name]={"name":name,"age":age,"postioin":postioin,"salary":salary}

with open("info.json","w")as f:
    json.dump(company_info,f,indent=5,sort_keys=True)


