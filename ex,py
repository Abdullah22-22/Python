import json
dictinoary={}
while True:
    name=input("name: ")
    age=input("age: ")
    num=input("num: ")
    dictinoary[name]={"name":name,"age":age,"num":num}
    n=input("continue: y")
    if n == "y":
        continue
    else:
        break
js=json.dumps(dictinoary)
with open("api.json",'w',)as f:
    f.write(js,)

import json
with open('api.json','r') as f:
    d = json.load(f)

print(d)

import json
with open("data.json",'r')as f:
    data=json.load(f)
print(data)
with open ("2data.json",'w')as f:
    json.dump(data, f,indent=5, sort_keys=True)

